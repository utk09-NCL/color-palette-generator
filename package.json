{
  "name": "colorconjure",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "bootstrap-dev": "npm run clean:install && npm i -D && npm run build",
    "dev": "vite",
    "build": "tsc --build && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "clean:install": "node -e \"const os = require('os'); const isWindows = os.platform() === 'win32'; if (isWindows) { console.log('Running on Windows'); require('child_process').execSync('npm run clean:install:win', { stdio: 'inherit' }); } else { console.log('Running on Linux or macOS'); require('child_process').execSync('npm run clean:install:mac', { stdio: 'inherit' }); }\"",
    "clean:install:mac": "rm -rf node_modules dist && npm install",
    "clean:install:win": "rmdir /s /q node_modules dist && npm install",
    "prepare": "husky || true",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "analyze": "vite build --mode analyze",
    "host:coverage": "vite preview --outDir coverage"
  },
  "dependencies": {
    "@headlessui/react": "2.2.4",
    "@tanstack/react-table": "8.21.3",
    "chroma-js": "3.1.2",
    "clsx": "2.1.1",
    "immer": "10.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "2.5.2",
    "react-icons": "5.5.0",
    "dexie": "4.0.11",
    "dexie-react-hooks": "1.1.7",
    "react-router-dom": "7.6.0",
    "zustand": "5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.26.0",
    "@tailwindcss/vite": "4.1.6",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/chroma-js": "3.1.1",
    "@types/react": "19.1.3",
    "@types/react-dom": "19.1.3",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "@vitejs/plugin-react": "4.4.1",
    "@vitest/coverage-istanbul": "3.1.3",
    "autoprefixer": "10.4.21",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.3.4",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.1.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "15.5.2",
    "postcss": "8.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "rollup-plugin-visualizer": "5.14.0",
    "tailwindcss": "4.1.6",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.0",
    "vite": "6.3.5",
    "vitest": "3.1.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{css,scss}": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ]
  }
}